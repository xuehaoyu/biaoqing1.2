/* pages/pay/pay.wxss */
.pay-body{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  top: 0;
}
.pay-body image{
  width: 100%;
  height: 100%;
}
.give-body{
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  padding-top: 520rpx;
}
.give-title{
  width: 100%;
  font-size: 30rpx;
  color: #000;
  font-weight: 700;
  text-align: center;
  padding-bottom: 15rpx;
}
.money-box{
  width: 100%;
  height: auto;
  padding: 80rpx 100rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.money-item{
  width: 141rpx;
  height: 185rpx;
  margin-bottom: 15rpx;
  position: relative;
}
.money-item image{
  width: 141rpx;
  height: 185rpx;
}
.money-num{
  width: 100%;
  height: 30rpx;
  position: absolute;
  left: 0;
  top: 50rpx;
  color: #e3b771;
  text-align: center;
  font-weight: 700;
}
.money-font{
  width: 100%;
  height: 28rpx;
  position: absolute;
  left: 0;
  bottom: 40rpx;
  color: #e3b771;
  text-align: center;
  font-size: 26rpx;
  font-weight: 700;
}

.btn-box{
  text-align: center;
}
.btn-box .btn-word{
  font-size: 26rpx;
  color:#666;
}
.btn-img-box{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 20rpx;
}
.btn-img-box image{
  width:60rpx;
  height:60rpx;
  margin-right: 25rpx;
  margin-bottom: 12rpx;
}
.btn-img-box image:nth-child(8n){
  margin-right: 0;
}
/*学套路  */
.study-area{
  width: 100%;
  height: auto;
  padding: 30rpx 28rpx 0;
  box-sizing: border-box;
  background: #ffffff;  
}
.study-top{
  width: 100%;
  height: 40rpx;
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.study-topleft,.study-topright{
  width: auto;
  height: auto;
  display: flex;
}
.study-topimg{
  width: 40rpx;
  height: 40rpx;
  padding-left: 2rpx;
}
.study-topimg image{
   width: 40rpx;
  height: 40rpx;
}
.study-font{
  font-size: 30rpx;
  line-height: 30rpx;
  padding-left: 16rpx;
  padding-top: 6rpx;
  font-weight: 700;
}
.study-topright{
  padding-top: 10rpx;
}
.study-topright image{
  width: 12rpx;
  height: 22rpx;
}
.study-more{
  font-size: 24rpx;
  line-height: 22rpx;
  color: #999999;
  padding-right: 20rpx;
}
.study-list{
  width: 100%;
  height: auto;
}
.study-item{
  width: 100%;
  height: 144rpx;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #eeeeee;
  display: flex;
  justify-content: space-between;
}
.study-item:last-of-type{
  border-bottom: none;
}
.study-img{
  width: 142rpx;
  height: 142rpx;
  border: 1rpx solid #eeeeee;
}
.study-img image{
  width: 142rpx;
  height: 142rpx;
}
.study-info{
  width: 506rpx;
  height: 144rpx;
  padding: 8rpx 0 0 0;
}
.study-title{
  font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  overflow: hidden;
  font-weight: 700;
  margin-bottom: 26rpx;
}
.study-dec{
  width: 100%;
  height: 80rpx;
  overflow: auto;
  font-size: 28rpx;
  color: #999999;
}
/*底部线  */
.bottom-line{
  width: 100%;
  height: 2rpx;
  background: #e0e0e0;
  position: fixed;
  left: 0;
  bottom: 0;
}

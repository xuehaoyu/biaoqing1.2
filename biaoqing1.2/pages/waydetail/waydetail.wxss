/* pages/waydetail/waydetail.wxss */
page{
  width: 100%;
  height: 100%;
}
.way-body{
  width: 100%;
  height: 100%; 
}
.img-body{
  width: 100%;
  height: auto;
  position: relative;
}
.img-body image{
  width: 100%;
}
.btn-area{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 28rpx;
  position: absolute;
  left: 0;
  bottom: 40rpx;
  display: flex;
  justify-content: space-between;
}
.btn-fix{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 28rpx;
  position: fixed;
  left: 0;
  bottom: 40rpx;
  display: flex;
  justify-content: space-between;
}
.related-btn,.share-btn{
  width: 332rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 80rpx;
  box-shadow: 0 0 16rpx 0 rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #666666;
  box-sizing: border-box;
}
.related-btn{
  padding: 0 86rpx 0 66rpx;
}
.related-btn image{
  width: 38rpx;
  height: 38rpx;
}
.share-btn{
  padding: 0 42rpx 0 42rpx;
  position: relative;
}
.share-btn image{
  width: 42rpx;
  height: 34rpx;
}
.share-btn button{
  position: absolute;
  left: 0;
  top: 0;
  width: 332rpx;
  height: 80rpx;
  opacity: 0;
}
/*相关表情区域  */
#relatedArea{
  width: 100%;
  box-sizing: border-box;
  padding: 0 28rpx;
}
.related-top{
  width: 100%;
  height: 30rpx;
  padding: 30rpx 0 54rpx;
  display: flex;
}
.top-line{
  width: 4rpx;
  height: 30rpx;
  background: #ffdd00;
}
.top-fonts{
  font-size: 30rpx;
  line-height: 30rpx;
  padding-left: 14rpx;
}
.related-list{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding-bottom: 40rpx;
}
.related-item{
  width: 156rpx;
  height: 156rpx;
  border: 2rpx solid #eeeeee;
  float: left;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
}
.related-item image{
  width: 156rpx;
  height: 156rpx;
}
.related-item:nth-child(4n){
  margin-right: 0;
}
/*返回按钮  */
.back-btn{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  right: 28rpx;
  bottom: 160rpx;
}
.back-btn image{
  width: 90rpx;
  height: 90rpx;
}
.back-fix{
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  right: 28rpx;
  bottom: 160rpx;
}
.back-fix image{
  width: 90rpx;
  height: 90rpx;
}
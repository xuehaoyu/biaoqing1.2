/* pages/detail/detail.wxss */
page{
  width: 100%;
  height: auto;
  background: #f7f7f7;
}
.detail-body{
  width: 100%;
  height: auto;
}
.detail-top{
  width: 100%;
  height: auto;
  padding: 40rpx 0;
  border-top: 2rpx solid #f7f7f7;
  border-bottom: 2rpx solid #eeeeee;
  background: #ffffff;
}
.top-img{
  width: 358rpx;
  height: auto;
  border: 2rpx solid #eeeeee;
  margin: 0 auto;
}
.top-img image{
  width: 358rpx;
}
.btn-area{
  width: 100%;
  height: 148rpx;
  background: #ffffff;
  display: flex;
  margin-bottom: 20rpx;
}
.report-btn,.share-btn,.save-btn,.collect-btn,.zan-btn{
  width: 152rpx;
  height: 148rpx;
  border-right: 2rpx solid #eeeeee;
  box-sizing: border-box;
  padding: 32rpx 0 36rpx 0;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.share-btn{
  position: relative;
}
.share-btn button{
  position: absolute;
  left: 0;
  top: 0;
  width: 152rpx;
  height: 148rpx;
  opacity: 0;
}
.report-btn image{
  width: 42rpx;
  height: 38rpx;
  display: block;
  margin: 0 auto;
}
.share-btn image{
  width: 48rpx;
  height: 38rpx;
  display: block;
  margin: 0 auto;
}
.save-btn image{
  width: 42rpx;
  height: 41rpx;
  display: block;
  margin: 0 auto;
}
.collect-btn image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 0 auto;
}
.zan-btn image{
  width: 38rpx;
  height: 36rpx;
  display: block;
  margin: 0 auto;
}
.btn-font{
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  line-height: 24rpx;
}
/*表情组图片*/
.group-area{
  width: 100%;
  height: auto;
  background: #ffffff;
  margin-bottom: 140rpx;
}
.group-top{
  width: 100%;
  height: 86rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 30rpx 28rpx 0;
  display: flex;
}
.top-line{
  width: 4rpx;
  height: 30rpx;
  background: #ffdd00;
}
.top-font{
  font-size: 30rpx;
  line-height: 30rpx;
  padding-left: 14rpx;
}
.tag-list{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 40rpx 30rpx 28rpx;
  display: flex;
  flex-wrap: wrap;
}
.tag-list text{
  font-size: 28rpx;
  margin-right: 20rpx;
  color: #999999;
}
.group-item{
  width: 156rpx;
  height: 156rpx;
  border: 2rpx solid #eeeeee;
  float: left;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
}
.group-item image{
  width: 156rpx;
  height: 156rpx;
}
.group-item:nth-child(4n){
  margin-right: 0;
}
.group-list{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 28rpx;
  overflow: hidden;
}
/*底部分享  */
.bottom-share{
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 28rpx;
  box-sizing: border-box;
}
.share-img{
  width: 230rpx;
  height: 72rpx;
  position: relative;
}
.share-img image{
  width: 230rpx;
  height: 72rpx;
}
.share-font{
  font-size: 28rpx;
  line-height: 28rpx;
}
.share-img button{
  position: absolute;
  left: 0;
  top:0;
  width: 230rpx;
  height: 72rpx;
  opacity: 0;
}
/*教程  */
.teach-body{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: #000;
  overflow: hidden;
  z-index: 99;
  box-sizing: border-box;
  padding: 138rpx 0 0 0;
}
.teach-body image{
  display: block;
  width: 100%;
  margin: 0 auto;
}
.teach-top{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.2);
  box-sizing: border-box;
  padding-top: 688rpx;
}
.teach-img{
  width: 200rpx;
  height: 238rpx;
  margin: 0 auto;
}
.teach-img image{
  width: 200rpx;
  height: 238rpx;
}
.teach-font{
  width: 100%;
  height: auto;
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  padding:  26rpx 0 32rpx 0;
}
.know-btn{
  width: 300rpx;
  height: 62rpx;
  background: #fc596c;
  border-radius: 8rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 62rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}
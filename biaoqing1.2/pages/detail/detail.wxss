/* pages/detail/detail.wxss */
page{
  width: 100%;
  height: auto;
  background: #f7f7f7;
}
.detail-body{
  width: 100%;
  height: auto;
}
.detail-top{
  width: 100%;
  height: auto;
  padding: 40rpx 0;
  border-top: 2rpx solid #f7f7f7;
  border-bottom: 2rpx solid #eeeeee;
  background: #ffffff;
}
.top-img{
  width: 358rpx;
  height: auto;
  border: 2rpx solid #eeeeee;
  margin: 0 auto;
}
.top-img image{
  width: 358rpx;
}
.btn-area{
  width: 100%;
  height: 148rpx;
  background: #ffffff;
  display: flex;
  margin-bottom: 20rpx;
}
.report-btn,.share-btn,.save-btn,.collect-btn{
  width: 152rpx;
  height: 148rpx;
  border-right: 2rpx solid #eeeeee;
  box-sizing: border-box;
  padding: 32rpx 0 36rpx 0;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.report-btn image{
  width: 42rpx;
  height: 38rpx;
  display: block;
  margin: 0 auto;
}
.share-btn image{
  width: 48rpx;
  height: 38rpx;
  display: block;
  margin: 0 auto;
}
.save-btn image{
  width: 42rpx;
  height: 41rpx;
  display: block;
  margin: 0 auto;
}
.collect-btn image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 0 auto;
}
.btn-font{
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  line-height: 24rpx;
}
/*表情组图片*/
.group-area{
  width: 100%;
  height: auto;
  background: #ffffff;
  margin-bottom: 140rpx;
}
.group-top{
  width: 100%;
  height: 86rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 30rpx 28rpx 0;
  display: flex;
}
.top-line{
  width: 4rpx;
  height: 30rpx;
  background: #ffdd00;
}
.top-font{
  font-size: 30rpx;
  line-height: 30rpx;
  padding-left: 14rpx;
}
.tag-list{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 40rpx 30rpx 28rpx;
}
.tag-list text{
  font-size: 28rpx;
  color: #999999;
}
.group-item{
  width: 156rpx;
  height: 156rpx;
  border: 2rpx solid #eeeeee;
  float: left;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
}
.group-item image{
  width: 156rpx;
  height: 156rpx;
}
.group-item:nth-child(4n){
  margin-right: 0;
}
.group-list{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 28rpx;
  overflow: hidden;
}
/*底部分享  */
.bottom-share{
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 28rpx;
  box-sizing: border-box;
}
.share-img{
  width: 230rpx;
  height: 72rpx;
  position: relative;
}
.share-img image{
  width: 230rpx;
  height: 72rpx;
}
.share-font{
  font-size: 28rpx;
  line-height: 28rpx;
}
.share-img button{
  position: absolute;
  left: 0;
  top:0;
  width: 230rpx;
  height: 72rpx;
  opacity: 0;
}
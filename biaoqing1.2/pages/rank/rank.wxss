/* pages/rank/rank.wxss */
.rank-body{
  width: 100%;
  height: 100%;
}
.top-fill{
  width: 100%;
  height: 20rpx;
  background: #f7f7f7;
}
/*排行榜顶部  */
.rank-top{
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  padding:  0 0 0 28rpx;
  display: flex;
  align-items: center;
}
.rank-topline{
  width: 4rpx;
  height: 30rpx;
  background: #ffdd00;
}
.rank-title{
  font-size: 30rpx;
  line-height: 30rpx;
  padding: 0 0 0 12rpx;
}
.rank-list{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 28rpx;
}
.rank-item{
  width: 100%;
  height: 144rpx;
  padding: 40rpx 0 40rpx;
  border-bottom: 1rpx solid #eeeeee;
  display: flex;
  justify-content: space-between;
}
.rank-img{
  width: 142rpx;
  height: 142rpx;
  border: 1rpx solid #eeeeee;
}
.rank-img image{
  width: 142rpx;
  height: 142rpx;
}
.rank-info{
  width: 520rpx;
  height: 140rpx;
  padding-top: 4rpx;
}
.info-top{
  width: 520rpx;
  height: 36rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.info-title{
  font-size: 30rpx;
  line-height: 36rpx;
  max-width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
}
.collect-num{
  display: flex;
  align-items: center;
}
.collect-num image{
  width: 36rpx;
  height: 36rpx;
  display: block;
}
.collect-num text{
  font-size: 24rpx;
  display: block;
  padding-left: 6rpx;
}
.info-dec{
  width: 520rpx;
  height: 74rpx;
  overflow: auto;
  font-size: 28rpx;
  line-height: 36rpx;
  color: #999999;
}
.info-dec text{
  margin-right: 14rpx;
}